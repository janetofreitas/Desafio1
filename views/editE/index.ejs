<!DOCTYPE html>
<html lang="pt">
    <head>
        <style>
            body {
              background-color: rgb(255, 255, 255);
            }
            a{
                color: aliceblue;
            }
         </style>
         
         <meta charset="UTF-8">
        <title>CRUD Eletrônicos</title>
    </head>
    <body>
        <h2 class="text-center text-warning">Editar</h2>
        <br>
        <br>
        <div class="container">
        <% data.forEach (function(details){ %>
            <form action="/editE/<%= details._id %>" method="POST">

                <label for="exampleFormControlInput1"><h5>Nome:</h5></label>
                <input type="text" value="<%= details.nome %>" name="nome">

                <label for="exampleFormControlInput1"><h5>Marca:</h5></label>
                <input type="text" value="<%= details.marca %>" name="marca">
                
                <label for="exampleFormControlInput1"><h5>Valor:</h5></label>
                <input type="number" value="<%= details.valor %>" name="valor">
                <div class="form-group">
                    <label for="exampleFormControlInput1"><h5>Cor:</h5></label>
                    
                    <select name="cor">
                      
                    <% if(details.cor.match('Preto'))  { %>
                        <option value ="Preto" selected>Preto</option>
                            <% }else  { %>
                                <option value ="Preto" >Preto</option>
                                    <% } %>

                    <% if(details.cor.match('Vermelho'))  { %>
                        <option value ="Vermelho" selected>Vermelho</option>
                            <% }else  { %>
                                <option value ="Vermelho" >Vermelho</option>
                                    <% } %>

                    <% if(details.cor.match('Vermelho'))  { %>
                        <option value ="Vermelho" selected>Vermelho</option>
                            <% }else  { %>
                                <option value ="Vermelho" >Vermelho</option>
                                    <% } %>  
                    </select>                                
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1"><h5>Voltagem:</h5></label>
                    
                    <select name="voltagem">
                      
                    <% if(details.voltagem.match('110v'))  { %>
                        <option value ="110v" selected>110v</option>
                            <% }else  { %>
                                <option value ="110v" >110v</option>
                                    <% } %>

                    <% if(details.voltagem.match('220v'))  { %>
                        <option value ="220v" selected>220v</option>
                            <% }else  { %>
                                <option value ="220v" >220v</option>
                                    <% } %>
                    </select>                                
                </div>

                <label for="exampleFormControlInput1"><h5>Descrição:</h5></label>
                <input type="text" value="<%= details.descricao %>" name="descricao">

                <label for="exampleFormControlInput1"><h5>Garantia:</h5></label>
                <input type="text" value="<%= details.garantia %>" name="garantia">

                <label for="exampleFormControlInput1"><h5>Modelo:</h5></label>
                <input type="text" value="<%= details.modelo %>" name="modelo">
                <br>
                <button class="btn btn-primary btn-lg btn-block"><a href="/showE/">Voltar</a></button>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Salvar Edições</button>
            </form>
        <% })%>
    </div>
    </body>
    </html>