<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
 integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<!DOCTYPE html>
<html lang="pt">
    <head>

        <style>
            body {
              background-color: whitesmoke;
            }
          
            </style>
        
        <meta charset="UTF-8">
        <title>CRUD livros</title>
    </head>

    <body>
        <h2 class="text-center text-warning">Editar</h2>
        <% data.forEach( function(details){ %>
            <form action = "/edit/<%= details._id  %>" method="POST">

                <div class="form-group">
                    <label for="exampleFormControlInput1"><h5>Nome:</h5></label>
                    
                    <input type = "text" value="<%= details.Nome%>" class="form-control" name="Nome">
                  </div>

                  <div class="form-group">
                    <label for="exampleFormControlInput1"><h5>Genero:</h5></label>
                    
                    <select name="Genero">
                      
                      
                      <% if(details.Genero.match('Terror'))  { %>
                        <option value ="Terror" selected>Terror</option>
                        <% }else  { %>
                          <option value ="Terror" >Terror</option>
                            <% } %>
                            
                      <% if(details.Genero.match('Comedia'))  { %>
                        <option value ="Comedia" selected>Comedia</option>
                        <% }else  { %>
                          <option value ="Comedia" >Comedia</option>
                            <% } %>

                        <% if(details.Genero.match('Acao'))  { %>
                        <option value ="Acao" selected>Ação</option>
                        <% }else  { %>
                          <option value ="acao" >Ação</option>
                            <% } %>

                        <% if(details.Genero.match('Fantasia'))  { %>
                        <option value ="Fantasia" selected>Fantasia</option>
                        <% }else  { %>
                          <option value ="Fantasia" >Fantasia</option>
                            <% } %>

                        <% if(details.Genero.match('Romance'))  { %>
                        <option value ="Romance" selected>Romance</option>
                        <% }else  { %>
                          <option value ="Romance" >Romance</option>
                            <% } %>

                        <% if(details.Genero.match('Auto-ajuda'))  { %>
                        <option value ="Auto-ajuda" selected>Auto-ajuda</option>
                        <% }else  { %>
                          <option value ="Auto-ajuda" >Auto-ajuda</option>
                            <% } %>

                        <% if(details.Genero.match('Infantil'))  { %>
                        <option value ="Infantil" selected>Infantil</option>
                        <% }else  { %>
                          <option value ="Infantil" >Infantil</option>
                            <% } %>

                        <% if(details.Genero.match('Educacional'))  { %>
                        <option value ="Educacional" selected>Educacional</option>
                        <% }else  { %>
                          <option value ="Educacional" >Educacional</option>
                            <% } %>
                        </select> 

                  </div>
    
                  <div class="form-group">
                    <label for="exampleFormControlInput1"><h5>Editora:</h5></label>
                    
                    <input type = "text" value="<%= details.Editora%>" class = "form-control"  name="Editora">
                  </div>
    
                  <div class="form-group">
                    <label for="exampleFormControlInput1"><h5>Ano de publicação:</h5></label>
                    
                    <input type = "text" value="<%= details.Ano%>" class="form-control" name="Ano" maxlength="4">
                  </div>
    
                  <div class="form-group">
                    <label for="exampleFormControlInput1"><h5>Numero de paginas:</h5></label>
                    
                    <input type = "text" value="<%= details.Nmr_pag%>" class="form-control" name="Nmr_pag">
                  </div>
    
                  <div class="form-group">
                    <label for="exampleFormControlInput1"><h5>Autor:</h5></label>
                    
                    <input type = "text" value="<%= details.Autor%>" class="form-control" name="Autor">
                  </div>
    
                  <div class="form-group">
                    <label for="exampleFormControlInput1"><h5>Preço:</h5></label>
                    
                    <input type = "text" value="<%= details.Preco%>" class="form-control" name="Preco">
                  </div>
    
                  <div class="form-group">
                    <label for="exampleFormControlInput1"><h5>Idioma:</h5></label>
                    <br>

                    <input type="radio" id="male" name="Idioma" value="Português" required="required" checked>
                    <label for="portugues">Português</label><br>
                    <input type="radio" id="female" name="Idioma" value="Inglês">
                    <label for="ingles">Inglês</label><br>
                    <input type="radio" id="other" name="Idioma" value="Espanhol">
                    <label for="espanhol">Espanhol</label>

                  </div>

                <button type="submit" class="btn btn-primary btn-lg btn-block .btn btn-warning">Salvar</button>
                <button class="btn btn-primary btn-lg btn-block .btn btn-warning"><a href="/show/">Voltar</a></button>
            </form>
            <% }) %>
    </body>
    </html>
